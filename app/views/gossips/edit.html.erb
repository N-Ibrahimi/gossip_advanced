     <div class="row justify-content-center align-items-center my-row">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'update'), method: "put" do %>

                    <div class="form-group">
                      <%= label_tag 'Title' %>
                      <%= text_field_tag 'title', "#{@gossip.title}", :class => "form-control", :placeholder => "Your gossip title in here" %>
                      <small id="emailHelp" class="form-text text-muted"> entre 3 et 14 caractères</small>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Content' %>
                      <%= text_area_tag 'content', "#{@gossip.content}", :class => "form-control", :placeholder => "Your gossip in here", :rows => "4" %>
                      <small id="emailHelp" class="form-text text-muted">☺️</small>
                    </div>

                    <%= submit_tag "Edit Gossip", :class => "btn btn-dark" %>

                  <% end %>

            </div>

      </div>